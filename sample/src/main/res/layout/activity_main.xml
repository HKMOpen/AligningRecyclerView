<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_methods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/methods_pretty"
        app:layout_heightPercent="10%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>

    <Button
        android:id="@+id/button_async"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/spinner_methods"
        android:text="@string/async_request"
        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>

    <Button
        android:id="@+id/button_sync"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/button_async"
        android:text="@string/sync_request"
        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>

    <Button
        android:id="@+id/button_rxandroid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/button_sync"
        android:text="@string/rxandroid_request"
        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>

    <TextView
        android:id="@+id/view_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_rxandroid"
        android:scrollbars="vertical"
        app:layout_marginBottomPercent="2%"
        app:layout_marginEndPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="2%"/>
</android.support.percent.PercentRelativeLayout>